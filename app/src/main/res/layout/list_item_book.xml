<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


    <ImageView
        android:layout_width="100sp"
        android:layout_height="150sp"
        android:id="@+id/book_cover_iv" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Harry Potter"
        android:id="@+id/book_title_tv"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="4dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/book_cover_iv"
        android:layout_toEndOf="@id/book_cover_iv" />

    <RatingBar
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratings"
        android:padding="2dp"
        android:rating="3.5"
        android:layout_toRightOf="@id/book_cover_iv"
        android:layout_toEndOf="@id/book_cover_iv"
        android:layout_below="@+id/book_title_tv"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/author_name_tv"
        android:text="J K Rowling"
        android:padding="2dp"
        android:textSize="15sp"
        android:layout_below="@+id/ratings"
        android:layout_toRightOf="@+id/book_cover_iv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/book_description_tv"
        android:maxLines="2"
        android:text="This gives a info about the book"
        android:layout_below="@id/book_cover_iv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


</RelativeLayout>